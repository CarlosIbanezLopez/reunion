<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      .card {
        margin: 0.5cm;
      }
      .card-title {
        font-size: 35px;
        font-weight: bold;
        color: #333;
        transition: color 0.1s, font-size 0.1s;
      }
      .label-text {
        font-size: 18px;
        color: #333;
        transition: color 0.1s, font-size 0.1s;
      }
    </style>
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row justify-content-center align-items-center full-height">
          <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-12 col-md-12 col-12 mx-auto">
              <div class="card-body px-5 py-5">
                <body>
                    <h3 class="card-title text-center mb-4" id="dynamicTitle">Registrarse</h3>
                    <script>
                      const title = document.getElementById("dynamicTitle");
                      let fontSize = 35;
                      function autoChangeFontSize() {
                        fontSize += 3;
                        title.style.fontSize = fontSize + "px";  
                        if (fontSize >= 57) {
                          fontSize = 35;
                        }
                      }  
                      setInterval(autoChangeFontSize, 2000);
                    </script>
                </body>        
                  <form action="/signup" method="POST">
                    <div class="form-group">
                      <label for="username" class="label-text">Username *</label>
                      <input type="text" name="username" placeholder="Username" class="form-control">
                    </div>
                    <div class="form-group">
                      <label for="correo" class="label-text">Correo *</label>
                      <input type="text" name="correo" placeholder="Correo" class="form-control">
                    </div>
                    <div class="form-group">
                      <label for="password" class="label-text">Password *</label>
                      <input type="password" name="password" placeholder="Password" class="form-control">
                    </div>
                    <div class="text-center">
                      <button type="submit" class="btn btn-primary btn-lg black-button">Registrarse</button>
                    </div>
                  </form>
                  <script>
                  const labelElements = document.querySelectorAll(".label-text");
                  let labelFontSize = 18;
                  function autoChangeLabelFontSize() {
                    labelFontSize += 2;
                    labelElements.forEach((label) => {
                      label.style.fontSize = labelFontSize + "px";
                    });
                    if (labelFontSize >= 30) {
                      labelFontSize = 18;
                    }
                  }
                  setInterval(autoChangeLabelFontSize, 1000);
                </script>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
