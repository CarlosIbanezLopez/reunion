<div class="container p-4">
    <div class="row">
        {{#each salas}}
        <div class="col-lg-4 col-md-6 col-12 mb-4">
            <div class="card h-100 custom-card">
                <div class="card-body">
                    <a href="/salas/inSala/{{tokenS}}" target="_blank">
                        <h5 class="card-title text-uppercase">{{title}}</h5>
                    </a>
                    <p class="card-text">{{description}}</p>
                </div>
                <div class="card-footer">
                    <div class="btn-group-vertical w-100">
                        <a class="btn btn-primary btn-lg custom-button" href="/salas/listUsuarios/{{id}}">
                            Compartir
                        </a>
                        <a class="btn btn-info btn-lg custom-button" href="/salas/edit/{{id}}">
                            Editar
                        </a>
                        <a class="btn btn-danger btn-lg custom-button" href="/salas/delete/{{id}}">
                            Borrar
                        </a>
                    </div>
                </div>
                <p class="card-text text-muted mt-3 text-right">{{timeago created_at}}</p>
            </div>
        </div>
        {{else}}
        <div class="col-md-12 text-center">
            <div class="card card-body custom-card">
                <h3>No hay reuniones disponibles</h3>
                <a href="/salas/add" class="btn btn-primary btn-lg black-button">Â¡Crea una ahora!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
