<div class="container p-4">
    <div class="row">
        {{#each salas}}
        <div class="col-lg-4 col-md-6 col-12 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column align-items-center">
                    <a href="/salas/inSala/{{tokenS}}" target="_blank">
                        <h5 class="card-title text-uppercase">{{title}}</h5>
                    </a>
                    <div class="d-flex justify-content-center align-items-center flex-grow-1">
                        <p class="card-text">{{description}}</p>
                        <p class="card-text text-muted mt-auto">{{timeago created_at}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay ninguna sala para este usuario.</p>
                <a href="/salas/add">Crea Uno!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>